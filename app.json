{
  "id": "com.cyclone-software.buienalarm",
  "version": "1.1.0",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "name": {
    "en": "BuienAlarm"
  },
  "description": {
    "en": "Informs you about the expected rain",
    "nl": "Geeft je informatie over de verwachte regen"
  },
  "category": "internet",
  "permissions": ["homey:manager:geolocation","homey:manager:api"],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "brandColor": "#E8461D",
  "contributing": {
      "donate": {
          "paypal": {
              "username": "marceltimmermans"
          }
      }
  },
  "author": {
    "name": "Marcel Timmermans",
    "email": "marcel@timmermans.us"
  },
  "flow": {
    "triggers": [
      {
        "id": "rain_start",
        "title": {
          "en": "It starts raining",
          "nl": "Het begint met regenen"
        }
      },
      {
        "id": "rain_stop",
        "title": {
          "en": "It stops raining",
          "nl": "Het stopt met regenen"
        }
      },
      {
        "id": "raining_in",
        "title": {
          "en": "It is going to rain in...",
          "nl": "Het gaat regenen over..."
        },
        "args": [
          {
            "name": "when",
            "type": "dropdown",
            "values": [
              {
                "id": "5",
                "label": {
                  "en": "5 minutes",
                  "nl": "5 minuten"
                }
              },
              {
                "id": "10",
                "label": {
                  "en": "10 minutes",
                  "nl": "10 minuten"
                }
              },
              {
                "id": "15",
                "label": {
                  "en": "15 minutes",
                  "nl": "15 minuten"
                }
              },
              {
                "id": "30",
                "label": {
                  "en": "30 minutes",
                  "nl": "30 minuten"
                }
              },
              {
                "id": "45",
                "label": {
                  "en": "45 minutes",
                  "nl": "45 minuten"
                }
              },
              {
                "id": "60",
                "label": {
                  "en": "1 hour",
                  "nl": "1 hour"
                }
              },
              {
                "id": "90",
                "label": {
                  "en": "1.5 hours",
                  "nl": "1.5 uur"
                }
              },
              {
                "id": "120",
                "label": {
                  "en": "2 hours",
                  "nl": "2 uur"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "dry_in",
        "title": {
          "en": "It is going to be dry in...",
          "nl": "Het stopt met regenen over..."
        },
        "args": [
          {
            "name": "when",
            "type": "dropdown",
            "values": [
              {
                "id": "5",
                "label": {
                  "en": "5 minutes",
                  "nl": "5 minuten"
                }
              },
              {
                "id": "10",
                "label": {
                  "en": "10 minutes",
                  "nl": "10 minuten"
                }
              },
              {
                "id": "15",
                "label": {
                  "en": "15 minutes",
                  "nl": "15 minuten"
                }
              },
              {
                "id": "30",
                "label": {
                  "en": "30 minutes",
                  "nl": "30 minuten"
                }
              },
              {
                "id": "45",
                "label": {
                  "en": "45 minutes",
                  "nl": "45 minuten"
                }
              },
              {
                "id": "60",
                "label": {
                  "en": "1 hour",
                  "nl": "1 hour"
                }
              },
              {
                "id": "90",
                "label": {
                  "en": "1.5 hours",
                  "nl": "1.5 uur"
                }
              },
              {
                "id": "120",
                "label": {
                  "en": "2 hours",
                  "nl": "2 uur"
                }
              }
            ]
          }
        ]
      },
      {
      "id": "triggerRainPercentage",
        "title": {
           "en": "Percentage of rain for comming 2 hours is more than ..",
           "nl": "Het regen percentage voor de komende 2 uur is meer dan .."
        },
        "tokens": [
           {
              "name": "rainpercentage",
              "type": "number",
              "title": {
                 "en": "Expected rain percentage",
                 "nl": "Verwachte regen percentage"
              },
              "example": 25
           }
        ],
        "args":[
          {
               "name": "rainpercentageArg",
               "type": "number",
               "min": 0,
               "max": 100,
               "step": 1,
               "placeholder": {
                  "en": "Rain percentage",
                  "nl": "Regen percentage"
               }
           }
        ]
     },
     {
     "id": "totalRainNextHour",
       "title": {
          "en": "For the next hour the total rain is more than ..",
          "nl": "Verwachte hoeveelheid regen voor komende uur is meer dan .."
       },
       "tokens": [
          {
             "name": "rainmm",
             "type": "number",
             "title": {
                "en": "Rain in mm",
                "nl": "Regen in mm"
             },
             "example": 1.5
          }
       ],
       "args":[
         {
              "name": "rainmmArg",
              "type": "number",
              "placeholder": {
                 "en": "Rain mm",
                 "nl": "Regen mm"
              }
          }
       ]
    }
    ],
    "conditions": [
      {
        "id": "is_mmrain",
        "title": {
          "en": "Does it rain the comming hour !{{more|less}} then .. ",
          "nl": "Het regent de komende uren !{{meer|minder}} dan..."
        },
        "args": [
          {
            "name": "rainmmArg",
            "type": "number",
            "placeholder": {
               "en": "Rain mm",
               "nl": "Regen mm"
            }
          }
        ]
      },
      {
        "id": "is_percrain",
        "title": {
          "en": "The percentage rain is !{{more|less}} then .. ",
          "nl": "Het percentage regen is !{{meer|minder}} dan..."
        },
        "args": [
          {
            "name": "rainpercentageArg",
            "type": "number",
            "min": 0,
            "max": 100,
            "step": 1,
            "placeholder": {
               "en": "Rain percentage",
               "nl": "Regen percentage"
            }
          }
        ]
      },
      {
        "id": "is_raining",
        "title": {
          "en": "It !{{is|isn't}} raining",
          "nl": "Het !{{is|is niet}} aan het regenen"
        }
      },
      {
        "id": "raining_in",
        "title": {
          "en": "It !{{is|isn't}} going to rain in...",
          "nl": "Het !{{gaat|gaat niet}} regenen over..."
        },
        "args": [
          {
            "name": "when",
            "type": "dropdown",
            "values": [
              {
                "id": "5",
                "label": {
                  "en": "5 minutes",
                  "nl": "5 minuten"
                }
              },
              {
                "id": "10",
                "label": {
                  "en": "10 minutes",
                  "nl": "10 minuten"
                }
              },
              {
                "id": "15",
                "label": {
                  "en": "15 minutes",
                  "nl": "15 minuten"
                }
              },
              {
                "id": "30",
                "label": {
                  "en": "30 minutes",
                  "nl": "30 minuten"
                }
              },
              {
                "id": "45",
                "label": {
                  "en": "45 minutes",
                  "nl": "45 minuten"
                }
              },
              {
                "id": "60",
                "label": {
                  "en": "1 hour",
                  "nl": "1 hour"
                }
              },
              {
                "id": "90",
                "label": {
                  "en": "1.5 hours",
                  "nl": "1.5 uur"
                }
              },
              {
                "id": "120",
                "label": {
                  "en": "2 hours",
                  "nl": "2 uur"
                }
              }
            ]
          }
        ]
      }
    ]
  }
}